@page
@model SnackisApp.Pages.Admin.IndexModel
@{

}

@if (Model.Forum == null)
{
    <h1 class="text-center">Skapa Nytt Forum</h1>

    <div class="col">
        <div class="row">
            <form method="post">
                <div class="form-group">
                    <label asp-for="NewForum.Name"></label>
                    <input asp-for="NewForum.Name" class="form-control" />
                    <span asp-validation-for="NewForum.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                </div>
                <input type="submit" value="Spara" class="btn btn-primary" />
            </form>
        </div>
    </div>
}

else
{
      <p>Om det inte finns något forum visas här ett formulär där administratören kan namnge och skapa forumet.</p>
}


