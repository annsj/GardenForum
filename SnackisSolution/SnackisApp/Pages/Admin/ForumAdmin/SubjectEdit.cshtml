@page
@model SnackisApp.Pages.Admin.ForumAdmin.SubjectEditModel
@{ Layout = "_Layout";
    ViewData["Title"] = "SubjectEdit"; }

<h1>Ändra ämne</h1>

@if (Model.Subject.Name == "Gruppmeddelande")
{
<p>Ämnet "Gruppmeddelande" får inte ändras"</p> }
else
{
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Subject.Id" />
                <input type="hidden" asp-for="Subject.ForumId" />
                <div class="form-group">
                    <label asp-for="Subject.Name" class="control-label"></label>
                    <input asp-for="Subject.Name" class="form-control" />
                    <span asp-validation-for="Subject.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Spara" class="btn btn-primary" />
                </div>
         </form>
        </div>
    </div>
    <div>
        <a asp-page="./Index">Tillbaka till Admin</a>
    </div>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}