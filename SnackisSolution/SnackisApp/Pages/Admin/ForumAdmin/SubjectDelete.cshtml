@page
@model SnackisApp.Pages.Admin.ForumAdmin.SubjectDeleteModel
@{ Layout = "_Layout";
    ViewData["Title"] = "SubjectDelete"; }

<h1>Radera ämne</h1>
<hr />

@if (Model.Subject.Name == "Gruppmeddelande")
{
<p>Ämnet "Gruppmeddelande" får inte raderas"</p> }
else
 {
    <h6>Vill du radera det här ämnet och alla dess inlägg?</h6>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <p>@Model.Subject.Name</p>
                    <div class="form-group">
                        <input type="submit" value="Radera" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-page="./Index">Radera inte</a>
        </div>
 }