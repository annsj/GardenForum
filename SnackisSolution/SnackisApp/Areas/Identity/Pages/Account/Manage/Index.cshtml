@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Användarnamn</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            @*<div>
                <label for="UploadedImage">Bild</label>
                @if (Model.Input.Picture != null)
                {
                    <img style="max-height: 30px" src="~/img/@Model.Input.Picture" title="Användarbild" alt="Kunde inte hämta bild" />
                }
                <input type="file" name="UploadedImage" />
            </div>*@

            <div>
                <label asp-for="Input.Picture"></label>
                @if (Model.Input.Picture != null)
                {
                    <img style="max-height: 50px" src="~/img/@Model.Input.Picture" title="Användarbild" alt="Kunde inte hämta bild" />
                }
                <p class="mt-3 mb-1">Byt bild</p>
                <input type="file" asp-for="UploadedImage" class="form-control border-0" />
                <span asp-validation-for="Input.Picture" class="text-danger"></span>
            </div>
            <br />

            <button id="update-profile-button" type="submit" class="btn btn-primary">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}